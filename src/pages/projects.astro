---
import BaseHead from '../components/BaseHead.astro';
import Aside from '../components/Aside.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import "@sakun/system.css/style.css";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<meta charset="utf-8" />
  		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	</head>
	<body ontouchstart="true">
	<main>
	<div class="container">
    <div class="layout">
      <div class="col col-main">
        <Aside />
	</div>
	  <p></p>
      <div class="col col-complementary" role="complementary">
        <div class="standard-dialog">
			<div>
				<div class="center" style="display: flex; gap: 10px; align-items: center; justify-content: center;">
					<svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: 32px;"> <path d="M5 2h2v12h3v3h7v-7h-3V2h8v8h-3v9h-9v3H2v-8h3V2zm15 6V4h-4v4h4zM8 19v-3H4v4h4v-1z" fill="currentColor"/> </svg>
					<h2 class="center" id="blog">Projects</h2>
				</div>
				<div style="display: flex">
					<div class="window">
						<div class="title-bar">
							<button aria-label="Close" class="close"></button>
							<h1 class="title">Stockpile<h1>
							<button aria-label="Resize" class="resize"></button>
						</div>
						<div class="details-bar">
							<span><a href="https://stockpile.pro">website</a></span>
							<span><a href="https://github.com/StockpileLabs">github</a></span>
						</div>
						<div class="separator"></div>
						<img src="StockpileFinal.png" style="display: block; margin-right: auto; margin-left: auto;" />
						<div class="window-pane center">
							Lightning fast community derived funding, powered by Solana. 
						</div>
					</div>
					<div class="window">
				</div>
			</div>
        </div>
      </div>
    </div>
  </div>
</main>
	</body>
</html>
